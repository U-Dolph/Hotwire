<UserControl x:Class="Hotwire.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotwire.View"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <TextBox Text="Username"
                 Grid.Row="0"
                 Margin="10, 10, 10, 0"
                 Style="{StaticResource txtBxStyle}"/>
        
        <TextBox Text="Password"
                 Grid.Row="1"
                 Margin="10, 10, 10, 0"
                 VerticalAlignment="Center"
                 Style="{StaticResource txtBxStyle}"/>

        <Button Content="Login"
                Grid.Row="2"
                Margin="10, 25, 10, 10"
                Style="{StaticResource bttnStyle}"/>

        <CheckBox Content="Stay signed in"
                  Grid.Row="3"
                  Foreground="#FFFFFF"
                  HorizontalAlignment="Center"
                  Margin="0, 10, 0, 10"/>
        
        <!--LOGIN ERROR MESSAGE-->
        <Label Content="Unsuccessful login!"
               Grid.Row="4"
               FontSize="14"
               HorizontalAlignment="Center"
               Foreground="Red"
               Visibility="Hidden"/>

        <Label Grid.Row="5"
               HorizontalAlignment="Center"
               FontSize="16">
            <Hyperlink NavigateUri="http://www.google.com">
                Don't have an account? Create one!
            </Hyperlink>
        </Label>
    </Grid>
</UserControl>
