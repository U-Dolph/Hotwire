<UserControl x:Class="Hotwire.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotwire.View"
             mc:Ignorable="d" 
             d:DesignHeight="{Binding}" d:DesignWidth="{Binding}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <TextBox Text="Username"
                 Grid.Row="0"
                 Margin="10, 10, 10, 0"
                 Style="{StaticResource txtBxStyle}"/>
        
        <TextBox Text="Password"
                 Grid.Row="1"
                 Margin="10, 10, 10, 0"
                 VerticalAlignment="Center"
                 Style="{StaticResource txtBxStyle}"/>

        <Button Content="Login"
                Grid.Row="2"
                Margin="10, 25, 10, 10"
                Style="{StaticResource bttnStyle}"/>
        
        <TextBlock Text="Don't have an account? Create one!"
                   Grid.Row="3"
                   HorizontalAlignment="Center"
                   Foreground="#FFFFFF"/>
    </Grid>
</UserControl>
