<Page x:Class="Hotwire.View.ChatView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotwire.View"
      xmlns:adorners="http://gu.se/Adorners"
      mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
            
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label Content="Username ID's Contacts"
               VerticalAlignment="Center"
               FontWeight="Medium"
               Foreground="#E4F0FB"/>
        </StackPanel>

        <!--CONTACTS-->        
        <ListView ItemsSource="{Binding}"
                  Background="#36393F"
                  Grid.Row="1"/>

        <!--ADD FRIEND-->
        <Button Content="Add Friend"
                Grid.Row="2"
                Style="{StaticResource bttnStyle}"
                Margin="10, 0, 10, 0"/>

        <!--MESSAGES-->
        <Label Content="@Username"
               Grid.Column="1"
               Foreground="#E4F0FB"/>

        <ListView ItemsSource="{Binding}"
                  Background="#36393F"
                  Grid.Column="1"
                  Grid.Row="1"/>
        
        <TextBox adorners:Watermark.Text="Message @Username"
                 adorners:Watermark.TextStyle="{StaticResource AdornerTextStyle}"
                 Margin="10, 10, 10, 10"
                 Style="{StaticResource txtBxStyle}"
                 VerticalContentAlignment="Center"
                 Grid.Row="2"
                 Grid.Column="1"/>
    </Grid>
</Page>
