<Page x:Class="Hotwire.View.ChatView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotwire.View"
      xmlns:adorners="http://gu.se/Adorners"
      mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
            
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Username ID's Contacts"
               VerticalAlignment="Center"
               FontWeight="Medium"
               Foreground="#E4F0FB"/>
            <!--CONTACTS-->
            <ListView Background="#252525"
                Height="200"
                ItemContainerStyle="{StaticResource ContactCardStyle}">
                <ListViewItem/>
                <ListViewItem/>
                <ListViewItem/>
                <ListViewItem/>
                <ListViewItem/>
            </ListView>

            <!--ADD FRIEND-->
            <local:AddFriendView Grid.Row="2"/>
        </StackPanel>

        <!--MESSAGES-->
        <StackPanel Grid.Column="1" Width="500">
            <Label Content="@Username"
               Foreground="#E4F0FB"/>
            <ListView Background="#252525"
                Height="400"
                ItemContainerStyle="{StaticResource ChatMsg}">
                <ListViewItem/>
                <ListViewItem/>
                <ListViewItem/>
                <ListViewItem/>
                <ListViewItem/>
                <ListViewItem/>
                <ListViewItem/>
                <ListViewItem/>
                <ListViewItem/>
                <ListViewItem/>
                <ListViewItem/>
                <ListViewItem/>
            </ListView>
        </StackPanel>

        <TextBox adorners:Watermark.Text="Message @Username"
                 adorners:Watermark.TextStyle="{StaticResource AdornerTextStyle}"
                 Style="{StaticResource txtBxStyle}"
                 VerticalContentAlignment="Center"
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="10, 0, 10, 0"
                 Width="500"/>

        <Button Content="Sign out"
                Grid.Row="1"
                Style="{StaticResource bttnStyle}"
                Margin="0, 10, 0, 10"/>
    </Grid>
</Page>
